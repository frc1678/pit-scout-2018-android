<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width= "wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/questionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Was the robot successful?"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:padding="@dimen/padding" />

    <View
        android:id="@+id/questionUnderline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_below="@+id/questionView"/>

    
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/questionUnderline"
        android:padding="@dimen/padding"
        android:id="@+id/radioGroup">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="18sp"
            android:buttonTint="@color/colorHintGray"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal"
            android:id="@+id/yesButton"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="18sp"
            android:buttonTint="@color/colorHintGray"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal"
            android:id="@+id/noButton"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        
    </RadioGroup>

    <View
        android:id="@+id/answerUnderline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_below="@+id/radioGroup"/>

</RelativeLayout>