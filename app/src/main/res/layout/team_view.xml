<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width= "wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/teamNameAndNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1678- Citrus Circuits"
        android:textSize="45dp" />

    <Button
        android:id="@+id/timer"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/teamNameAndNumber"
        android:layout_marginTop="50dp"
        android:hint="@string/timer_hint" />

    <EditText
        android:id="@+id/SEALsNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer"
        android:layout_marginTop="50dp"
        android:hint="SEALs Notes: climber notes, possible autos, etc." />


</RelativeLayout>