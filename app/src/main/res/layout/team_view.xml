<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width= "wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/teamNameAndNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1678- Citrus Circuits"
        android:textSize="45dp" />

    <Button
        android:id="@+id/timer"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/teamNameAndNumber"
        android:layout_marginTop="200dp"
        android:hint="@string/timer_hint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEALs Notes: climber notes, possible autos, etc."
        android:id="@+id/SEALsNotesTextView"
        android:layout_below="@+id/timer"
        android:textSize="27dp"
        android:layout_marginTop="150dp"/>

    <EditText
        android:id="@+id/SEALsNotesEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SEALsNotesTextView"
        android:layout_marginTop="10dp"
        />


</RelativeLayout>